# Auto-save configuration for Zenith-Fresh No-BS Framework
SAVE_INTERVAL=300  # 5 minutes
BRANCH_PREFIX=autosave
COMMIT_MESSAGE="Auto-save: Zenith-Fresh progress checkpoint"

# Files to always include
INCLUDE_PATTERNS="
*.js
*.jsx
*.ts
*.tsx
*.json
*.yml
*.yaml
*.md
*.sql
*.sh
"

# Files to never include
EXCLUDE_PATTERNS="
node_modules/
.env
.env.*
*.log
*.tmp
dist/
build/
.docker/
"
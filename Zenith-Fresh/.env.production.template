# =============================================================================
# ZENITH PLATFORM - PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# SECURITY NOTICE: This is a template file. NEVER commit actual production values to version control.
# Copy this file to .env.local for local development or configure in Vercel/Railway for production.
# =============================================================================

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-a-32-character-secret-for-production

# Application Configuration
APP_NAME="Zenith Platform"
APP_URL=https://your-domain.com
APP_VERSION=3.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL - Required)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000
DATABASE_CONNECTION_LIMIT=100

# Railway Database (if using Railway)
RAILWAY_DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database SSL Configuration
DATABASE_SSL_CERT_PATH="/path/to/ssl/cert.pem"
DATABASE_SSL_KEY_PATH="/path/to/ssl/key.pem"
DATABASE_SSL_CA_PATH="/path/to/ssl/ca.pem"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache (Required for production scaling)
REDIS_URL="redis://username:password@host:port"

# Redis Configuration
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_TLS=true
REDIS_DB=0

# Redis Connection Pool
REDIS_POOL_SIZE=10
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# =============================================================================
# AUTHENTICATION PROVIDERS
# =============================================================================

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Microsoft Azure AD (Optional)
AZURE_AD_CLIENT_ID=your-azure-client-id
AZURE_AD_CLIENT_SECRET=your-azure-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# =============================================================================
# PAYMENT PROCESSING (STRIPE)
# =============================================================================

# Stripe Production Keys (NEVER use test keys in production)
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Configuration
STRIPE_CURRENCY=usd
STRIPE_TAX_RATE_ID=txr_your_tax_rate_id
STRIPE_CUSTOMER_PORTAL_URL=https://billing.stripe.com/p/login/your_portal_link

# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================

# Resend Email Service (Primary)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@your-domain.com
SUPPORT_EMAIL=support@your-domain.com

# SendGrid (Alternative)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-domain.com

# Email Configuration
EMAIL_PROVIDER=resend  # or 'sendgrid'
EMAIL_RATE_LIMIT=100   # emails per hour
EMAIL_QUEUE_ENABLED=true

# =============================================================================
# AI SERVICE INTEGRATIONS
# =============================================================================

# OpenAI GPT-4
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION_ID=org-your-organization-id

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI
GOOGLE_AI_API_KEY=your-google-ai-api-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-organization
SENTRY_PROJECT=zenith-platform
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# DataDog APM (Optional)
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com
DD_SERVICE=zenith-platform
DD_ENV=production

# New Relic (Alternative)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Zenith Platform Production

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# HubSpot CRM
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_PORTAL_ID=your-hubspot-portal-id

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Discord Integration
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CLIENT_ID=your-discord-client-id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_RATE_LIMIT=1000        # requests per hour per IP
API_BURST_LIMIT=50         # burst requests per minute
JWT_SECRET=your-32-character-jwt-secret

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://app.your-domain.com
CORS_CREDENTIALS=true

# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# =============================================================================
# CDN & STORAGE
# =============================================================================

# AWS S3 (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudflare (CDN)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================

# Feature Flags
FEATURE_FLAG_ANALYTICS_ADVANCED=true
FEATURE_FLAG_AI_ORCHESTRATION=true
FEATURE_FLAG_ENTERPRISE_FEATURES=true
FEATURE_FLAG_BETA_FEATURES=false

# Rate Limiting
RATE_LIMIT_WINDOW=3600000  # 1 hour in milliseconds
RATE_LIMIT_MAX=1000        # max requests per window

# =============================================================================
# PERFORMANCE & SCALING
# =============================================================================

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_TELEMETRY_DISABLED=1

# Memory & Performance
NODE_OPTIONS="--max-old-space-size=4096"
UV_THREADPOOL_SIZE=128

# Cache Configuration
CACHE_TTL=3600             # 1 hour default TTL
STATIC_CACHE_TTL=86400     # 24 hours for static assets

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================

# Stripe Webhooks
STRIPE_WEBHOOK_ENDPOINT=https://your-domain.com/api/webhooks/stripe

# GitHub Webhooks (for CI/CD)
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# Custom Webhooks
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Database Backup
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=30

# Disaster Recovery
DR_REGION=us-west-2
DR_DATABASE_URL=postgresql://username:password@dr-host:port/database

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
COOKIE_CONSENT_REQUIRED=true

# Terms & Privacy
TERMS_URL=https://your-domain.com/terms
PRIVACY_URL=https://your-domain.com/privacy

# =============================================================================
# ENVIRONMENT VALIDATION
# =============================================================================

# Environment Validation (used by startup scripts)
ENV_VALIDATION_ENABLED=true
REQUIRED_ENV_VARS="DATABASE_URL,REDIS_URL,NEXTAUTH_SECRET,STRIPE_SECRET_KEY"

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true

# =============================================================================
# NOTES & REMINDERS
# =============================================================================

# 1. Generate strong secrets using: openssl rand -base64 32
# 2. All URLs should use HTTPS in production
# 3. Database connections should use SSL/TLS
# 4. Regular key rotation is recommended (quarterly)
# 5. Monitor all third-party service quotas and limits
# 6. Set up alerts for service failures and quota limits
# 7. Test disaster recovery procedures regularly
# 8. Keep this template updated as new services are added

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
# Security Configuration
# Copy this to .env.local and configure your values

# Redis Configuration (required for advanced rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Security Settings
SECURITY_ENABLED=true
SECURITY_LOG_LEVEL=INFO
SECURITY_RATE_LIMIT_GLOBAL=1000
SECURITY_DDOS_THRESHOLD=5000
SECURITY_AUTO_BLOCK_DURATION=3600

# API Key Settings
API_KEY_ENCRYPTION_SECRET=your_32_character_secret_key_here
API_KEY_DEFAULT_RATE_LIMIT=1000

# IP Filtering
IP_WHITELIST_ENABLED=true
IP_BLACKLIST_ENABLED=true
AUTO_IP_BLOCKING=true

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_MITIGATION_AUTO=true
DDOS_EMERGENCY_MODE_THRESHOLD=10000

# Threat Detection
THREAT_DETECTION_ENABLED=true
THREAT_PATTERNS_AUTO_UPDATE=true
MALWARE_SCANNING_ENABLED=false

# Notifications (optional)
SECURITY_WEBHOOK_URL=
SLACK_SECURITY_WEBHOOK=
EMAIL_SECURITY_ALERTS=admin@yourdomain.com

# Monitoring
SECURITY_METRICS_ENABLED=true
SECURITY_DASHBOARD_ENABLED=true
REAL_TIME_MONITORING=true